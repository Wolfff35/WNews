<resources>

    <attr name="menu_icon_add" format="reference"/>
    <attr name="menu_icon_delete" format="reference"/>
    <attr name="menu_icon_save" format="reference"/>
    <attr name="menu_icon_share" format="reference"/>
    <attr name="menu_icon_mark_as_read" format="reference"/>
    <attr name="menu_icon_import" format="reference"/>

    <attr name="my_hint_text" format="reference"/>
    <attr name="my_edit_text" format="reference"/>

    <attr name="toolbar_theme" format="reference"/>


    <!-- Base application theme. -->
      <style name="AppTheme" parent="Theme.AppCompat">
          <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

          <!-- -->
          <item name="menu_icon_add">@drawable/ic_add_white</item>
          <item name="menu_icon_delete">@drawable/ic_delete_white</item>
          <item name="menu_icon_save">@drawable/ic_save_white</item>
          <item name="menu_icon_share">@drawable/ic_share_white</item>
          <item name="menu_icon_mark_as_read">@drawable/ic_mark_all_white</item>
          <item name="menu_icon_import">@drawable/ic_import_white</item>

          <item name="toolbar_theme">@style/Base_ToolbarStyle_Dark</item>

      </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_Light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Light</item>
        <item name="colorAccent">@color/colorAccent_Light</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- -->
        <item name="menu_icon_add">@drawable/ic_add_black</item>
        <item name="menu_icon_delete">@drawable/ic_delete_black</item>
        <item name="menu_icon_save">@drawable/ic_save_black</item>
        <item name="menu_icon_share">@drawable/ic_share_black</item>
        <item name="menu_icon_mark_as_read">@drawable/ic_mark_all_black</item>
        <item name="menu_icon_import">@drawable/ic_import_black</item>

        <item name="toolbar_theme">@style/Base_ToolbarStyle_Light</item>

     </style>

     <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />-->

    <!--Floating label text style-->
    <style name="MyHintTextLight" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryDark_Light</item>
    </style>
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--Input field style-->
    <style name="MyEditTextLight" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary_Light</item>
        <item name="colorControlActivated">@color/colorAccent_Light</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

      <style name="Base_ToolbarStyle_Light">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:textColor">#050505</item>
        <item name="android:textColorPrimary">#050505</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="Base_ToolbarStyle_Dark">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:textColor">#fcfcfb</item>
        <item name="android:textColorPrimary">#fcfcfb</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>
</resources>
